set $term foot
set $mod Mod4

exec "waybar &"

output * scale 1
output * bg ~/Pictures/wallpapers/wolf.png fill

# shorcuts
bindsym $mod+Shift+q kill
bindsym $mod+Return exec $term --maximized
bindsym $mod+d exec wofi --show drun
bindsym $mod+Shift+e exec swaymsg exit

# power options
bindsym $mod+Shift+w exec wlogout

# layout
bindsym $mod+f fullscreen toggle
